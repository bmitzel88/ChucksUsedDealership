@model InventoryViewModel

@{
    ViewData["Title"] = "Details";
    bool isAdmin = User.IsInRole("Admin"); 
}

<h1>Car Details</h1>

<div class="card mb-3" style="max-width: 540px;">
    <div class="row g-0">
        <!-- Car Image -->
        <div class="col-md-4">
            <img src="@Model.Cars[0].Image" class="img-fluid rounded-start" alt="Car Image" />
        </div>
        <!-- Car Details -->
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.Cars[0].Make @Model.Cars[0].Model (@Model.Cars[0].Year)</h5>
                <p class="card-text"><strong>Color:</strong> @Model.Cars[0].Color</p>
                <p class="card-text"><strong>Mileage:</strong> @Model.Cars[0].Mileage miles</p>
                <p class="card-text"><strong>Price:</strong> $@Model.Cars[0].Price</p>
                <p class="card-text"><small class="text-muted">Car ID: @Model.Cars[0].CarId</small></p>
            </div>
        </div>
    </div>
</div>

<!-- Contact Form -->
<form asp-action="RedirectToContact" method="post" class="mt-3">
    <input type="hidden" name="carId" value="@Model.Cars[0].CarId" />
    <input type="hidden" name="carMake" value="@Model.Cars[0].Make" />
    <input type="hidden" name="carModel" value="@Model.Cars[0].Model" />
    <button type="submit" class="btn btn-primary">Talk to a representative</button>
</form>

<!-- Admin Actions -->
@if (isAdmin)
{
    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model?.Cars[0].CarId" class="btn btn-warning">Edit</a>
        <a asp-action="Delete" asp-route-id="@Model?.Cars[0].CarId" class="btn btn-danger">Delete</a>
    </div>
}

<!-- Back to List -->
<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>