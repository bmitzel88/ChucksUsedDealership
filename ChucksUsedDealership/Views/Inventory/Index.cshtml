@* @model InventoryViewModel
 *@
@model PaginationViewModel<CarInventory>

@{
    ViewData["Title"] = "Our Inventory";
}

<h1>Our Inventory</h1>

<p>
    @if (User.IsInRole("Admin"))
    {
        <a class="btn btn-primary" asp-action="Create">Add Car</a>
    }
</p>

<form asp-action="Index" method="get"> 
    <label for="pageSize">Results per page:</label> 
    <select id="pageSize" name="pageSize" onchange="this.form.submit()">  
        <option value="12">12</option> 
        <option value="24">24</option>
        <option value="48">48</option> 
        <option value="120">120</option> 
    </select>
    <input type="hidden" name="page" value="@Model.CurrentPage"/>
</form>

@if (Model.Items.Count() != 0)
{
    <div class="row">
        @foreach (var item in Model.Items)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card">
                    @*Display car image if its available*@
                    @if (!string.IsNullOrEmpty(item.Image))
                    {
                        <img src="@item.Image" 
                        class="card-img-top" 
                        alt="@item.Make @item.Model" 
                        style="height: 200px; object-fit: cover;"/>
                    }
                    <div class="card-body">
                        <h5 class="card-title">@item.Year @item.Make @item.Model</h5>
                        <p class="card-text">
                            <strong>Color:</strong> @item.Color <br />
                            <strong>Mileage:</strong> @item.Mileage <br />
                            <strong>Price:</strong> $@item.Price
                        </p>
                        <div class="d-flex justify-content-between">
                            <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.CarId">Details</a>
                            
                            @if (User.IsInRole("Admin"))
                            {
                                <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.CarId">Edit</a>
                                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.CarId">Delete</a>
                            }

                        </div>

                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <h2>No vehicles to display. Sorry about that!</h2>
}

<div class="pagination">
    <a asp-action="Index" asp-route-page="1" asp-route-pageSize="@Model.PageSize"
       class="@(Model.CurrentPage == 1 ? "disabled" : "")">First</a>
    <a asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)" asp-route-pageSize="@Model.PageSize" class="@(Model.CurrentPage == 1 ? "disabled" : "")">Previous</a>

    @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
    {
        <a asp-action="Index" asp-route-page="@i" asp-route-pageSize="@Model.PageSize" class="@(i == Model.CurrentPage ? "active" : "")">@i</a>
    }

    <a asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)" asp-route-pageSize="@Model.PageSize" class="@(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">Next</a>
    <a asp-action="Index" asp-route-page="@Model.TotalPages" asp-route-pageSize="@Model.PageSize" class="@(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">Last</a>
</div>

<script>
     // Set the selected value of the dropdown based on the pageSize parameter from the URL
    document.addEventListener("DOMContentLoaded", function () { //event listener for when the page loads
        var urlParams = new URLSearchParams(window.location.search); // get the query string from the URL
        var pageSize = urlParams.get("pageSize"); // get the pageSize parameter from the query string
        if (pageSize) {
            document.getElementById("pageSize").value = pageSize; // set the value of the dropdown to the pageSize parameter
        }
    });
</script>

<style>
    .text-truncate {
        display: inline-block;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width: 200px; /* Adjust the width as needed */
    }

    .pagination a {
        margin: 0 5px;
        padding: 5px 10px;
        text-decoration: none;
        border: 1px solid #ddd;
        color: #007bff;
    }

    .pagination a.active {
        background-color: #007bff;
        color: white;
        border-color: #007bff;
    }

    .pagination a.disabled {
        pointer-events: none;
        color: #ccc;
        border-color: #ccc;
    }

    .card-body {
        height: 190px; 
        overflow: hidden;
    }

    .card-title {
        height: 2em;
        font-size: 18px;
    }
</style>