@model IEnumerable<ChucksUsedDealership.Models.ContactForm>

@{
    ViewData["Title"] = "ContactFormList";
}

<h1>ContactFormList</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<p>
    <a asp-action="Index" class="btn btn-primary">Create New</a>
</p>
<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>@Html.DisplayNameFor(model => model.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(model => model.DateSubmitted)</th>
                <th>@Html.DisplayNameFor(model => model.Message)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <div class="text-truncate">
                            @Html.DisplayFor(modelItem => item.Name)
                        </div>
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                    <td>
                        <div class="text-truncate" style="max-width: 100px;">
                            @item.DateSubmitted.ToString("dd-mm-yyyy")
                        </div>
                    </td>
                    <td>
                        <div class="text-truncate" style="max-width: 200px;">
                            @item.Message
                        </div>
                    </td>
                    <td>
                        <div class="d-flex flex-nowrap">
                            <a asp-action="Edit" asp-route-id="@item.ContactFormId" class="btn btn-primary btn-sm me-1">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.ContactFormId" class="btn btn-info btn-sm me-1">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.ContactFormId" class="btn btn-danger btn-sm">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    // Auto-close the alert after 10 seconds
    setTimeout(function () {
        var alert = document.querySelector('.alert');
        if (alert) {
            alert.classList.remove('show');
            alert.classList.add('hide');
        }
    }, 10000);
</script>

<style>
    .text-truncate {
        display: inline-block;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width: 200px; /* Adjust the width as needed */
    }
</style>
